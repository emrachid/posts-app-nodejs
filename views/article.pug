extends layout

block content
  h1= article.title
  h5 Written by #{author.name}
  p= article.body
  hr
  if user
    if user.username === article.author
      a.btn.btn-primary(href='/articles/edit/' + article._id) Edit
      span 
      a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete
