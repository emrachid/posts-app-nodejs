extends layout

block content
  h1 Login
  br
  form(method='POST', action='/users/login')
    #form-group
      label Username:
      input.form-control(name='username', type='text', autocomplete='username', placeholder='username', required)
    br
    #form-group
      label Password:
      input.form-control(name='password', type='password', autocomplete='current-password', placeholder='password', required)
    br
    input.btn.btn-primary(type='submit', value='Submit')
